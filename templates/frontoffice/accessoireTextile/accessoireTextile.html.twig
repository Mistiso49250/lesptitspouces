{% block head %}
    <title>Accessoires & Textiles</title>
{% endblock %}

{% block content %}

    <div class="titrePage">
        <h1>Accessoires & Textiles</h1>
    </div>

    <section class="row justify-content-nm-center container-fluid mt-4">
        <div class="col-12">
            <h4>Nos rayon</h4>
            <a href="index.php?action=capeBain" class="title">Capes de bain</a>
            <a href="index.php?action=cartable" class="title">Cartables</a>
            <a href="index.php?action=kimonoBain" class="title">Kimonos de bain</a>
            <a href="index.php?action=sacDos" class="title">Sacs à dos</a>
            <a href="index.php?action=sacVoyage" class="title">Sacs de voyage</a>
            <a href="index.php?action=servietteBain" class="title">Serviettes de Bain</a>
            <a href="index.php?action=valise" class="title">Valises</a>
        </div>
        {# </section> #}

        {% for article in articles %}
        {# <section class="row"> #}
            <div class="col-xs">
                <div class="card">
                    <img src="images/{{ article.image }}" alt="" class="cardImg"></a>
                    <div class="cardBlock">
                        <h4 class="cardTitle">{{ article.titre }} </h4>
                        <a href="index.php?action={{ article.id_article }}">
                        <p class="cardArticleText">{{ article.extrait | nl2br }}</p>
                        <p class="cardPrice">{{ article.prix }}</p>
                        <a class="btn btn-info btn-rouded mb-4" href="">Ajouter au panier</a>
                    </div>
                </div>
            </div>
    </section>
    {% endfor %}

    {# Pagination #}
    <div class="d-flex justify-content-between my4">
        {% if data.pagePrecedente !==0 %}
            <a href="index.php?action=cadeauxnaissance&page={{ data.pagePrecedente }}" class="btn btn-info m-3">&laquo;
            Page
            précédente</a>
        {% endif %}
        {% if data.pageSuivante %}
            <a href="index.php?action=cadeauxnaissance&page={{ data.pageSuivante }}" class="btn btn-info ml-auto m-3">Page
            suivante &raquo;</a>
        {% endif %}
    </div>

{% endblock %}
