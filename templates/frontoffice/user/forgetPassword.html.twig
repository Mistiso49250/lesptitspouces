{% extends "/frontoffice/layout.html.twig" %}

{% block head %}
	<title>Mot de passe oublié</title>
{% endblock %}

{% block content %}

	<div class="contentForget">
		<div class="homeHeader">
			<h4>Mot de passe oublié ?</h4>
		</div>

        <!-- notification message d'erreurs -->
        {% for message in app.flashes('error') %}
            <h2 class="danger"> {{ message }} </h2>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <h2 class="success"> {{ message }} </h2>
        {% endfor %}

		<h4>Veuillez rentrer votre adresse mail pour recevoir votre mot de passe
		</h4>

        <form action="" method="post">
            <div class="form-group">
                <label for="">Email</label>
                <input type="email" name="email" class="form-control" placeholder="email"/>
            </div>
        </div>

        </form>
    </div>

{% endblock %}
