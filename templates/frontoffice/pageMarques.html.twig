{% extends "/frontoffice/layout.html.twig" %}

{% block head %}
	<title>{{ titre page }}</title>
{% endblock %}

{% block content %}

	<div class="titrePage">
		<h1>{{ titre }}</h1>
	</div>

	{% for item in marques %}
		<div class="row row-cols-1 row-cols-md-2 g-4">
			<div class="col">
				<div class="card">
					<img src="images/{{ item.image }}" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{ item.titre }}</h5>
						<p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
					</div>
				</div>
			</div>
        </div>
	{% endfor %}

	{# Pagination #}
	<div class="d-flex justify-content-between my4">
		{% if data.pagePrecedente !==0 %}
			<a href="index.php?action=album&page={{ data.pagePrecedente }}" class="btn btn-info m-3">&laquo;
				            Page
				            précédente</a>
		{% endif %}
		{% if data.pageSuivante %}
			<a href="index.php?action=album&page={{ data.pageSuivante }}" class="btn btn-info ml-auto m-3">Page
				            suivante &raquo;</a>
		{% endif %}
	</div>

{% endblock %}
